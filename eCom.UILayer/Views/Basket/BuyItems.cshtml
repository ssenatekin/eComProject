@model Credit
@{
    ViewData["Title"] = "BuyItems";
    Layout = "~/Views/Shared/_eComLayout.cshtml";
}

<h1>Sepettekileri Satın Al</h1>
<h3>Kart Bilgilerini Giriniz... </h3>

<form class="pt-3" method="post">
    <div class="form-group">
        <input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Kart Sahibi Adı" asp-for="CreditUserName">
    </div>
    <div class="form-group">
        <input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Kart Sahibi Soyadı" asp-for="CreditUserSurname">
    </div>
    <div class="form-group">
        <input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Kredi Kartı No" asp-for="CreditNo">
    </div>
    <div class="form-group">
        <input type="password" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Cvv" asp-for="Cvv">
    </div>
    <div class="form-group">
        <input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Tarih" asp-for="Date">
    </div>
    <div class="mt-3">
        <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"> Ödemeyi Tamamla</button>
    </div>
</form>


